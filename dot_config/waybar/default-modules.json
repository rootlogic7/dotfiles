{
	"clock": {
		"interval": 60,
		"tooltip": true,
		"format": "{:%H:%M}",
		"tooltip-format": "{:%Y-%m-%d}"
	},
    "group/hardware": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "memory",
            "network"
        ]
    },
    "cpu": {
        "interval": 10,
        "format": "   {usage} % |",
        "max-length": 10
    },
    "memory": {
        "interval": 30,
        "format": "  {} % |",
        "max-length": 10
    },
    "network": { 
        "interval": 2,
        "interface": "enp4s0",
        "format": "  {bandwidthUpBytes}      {bandwidthDownBytes}"
    }
}
